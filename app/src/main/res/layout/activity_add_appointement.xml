<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Add Appointment"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
            app:titleTextColor="#FFFFFF" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"><![CDATA[
        >

        ]]>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tildiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Diagnosis" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietTreatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Treatment" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietObservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observations"
                android:lineSpacingExtra="10sp"
                android:singleLine="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="mm/dd/yyyy"
            android:inputType="date" />

        <Button
            android:id="@+id/btnAddAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃ±adir" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>